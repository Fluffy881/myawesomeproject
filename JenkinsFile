pipeline {
    agent any

    tools {
        maven "Maven 3.9.6"
    }

    stages {
        stage('hello') {
            steps {
                script {
                    echo 'Hello World !'
                }
            }
        }

        stage('Maven Build') {
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build('myawesomepoject:latest')
                }
            }
        }

        stage('Start Docker Container') {
            steps {
                bat "docker run --name myawesomepoject -d -p 9075:8080 myawesomepoject:latest MyAwesomePoject.jar"
            }
        }
    }
}